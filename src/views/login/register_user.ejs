<%- include('../partials/top-a') -%>
    <link rel="stylesheet" href="../../css/base/header.css">
    <link rel="stylesheet" href="../../css/base/footer.css">

    <%- include('../partials/top-b') -%>
        <%- include('../partials/header') -%>

            <div class="container">
                <div class="row">
                    <div class="col s12 center-align">
                        <h4 class="aum-extrabold brand-logo">ACCOUNT REGISTERATION</h3>
                    </div>
                </div>
            </div>

            <div class="container ">
                <div class="row">
                    <div class="col s8 offset-s2">
                        <div class="container white aum-border-radius-12">
                            <div class="container">
                                <div class="row">
                                        <div class="container">
                                            <div class="z-depth-1 grey lighten-4 row"
                                                style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
                                                <form id="userRegisterForm" onsubmit="return false;">

                                                    <div class="row">
                                                        <div class="input-field col s12">
                                                            <i class="material-icons prefix">account_circle</i>
                                                            <input id="username" type="text" class="validate"
                                                                name="username" required>
                                                            <label for="username">Full Name</label>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="input-field col s12">
                                                            <i class="material-icons prefix">phone</i>
                                                            <input id="phone" type="tel" class="validate" name="phone"
                                                                required>
                                                            <label for="phone">Phone Number</label>
                                                        </div>

                                                    </div>

                                                    <div class="row">
                                                        <div class="input-field col s12">
                                                            <i class="material-icons prefix">email</i>
                                                            <input id="email" type="email" class="validate" name="email"
                                                                required>
                                                            <label for="email">Email Address</label>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="input-field col s12">
                                                            <i class="material-icons prefix">lock</i>
                                                            <input id="password" type="password" name="password"
                                                                required>
                                                            <label for="password">Password</label>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="input-field col s12">
                                                            <i class="material-icons prefix">lock</i>
                                                            <input id="confirmPassword" type="password"
                                                                name="confirmPassword" required>
                                                            <label for="confirmPassword">Confirm Password</label>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="input-field col s12">
                                                            <button id="createAccount"
                                                                class="btn waves-effect waves-light bg-gray col s12"
                                                                type="submit">Create Account
                                                            </button>
                                                        </div>
                                                    </div>

                                                </form>
                                            </div>
                                        </div>

                                        <% if (message) { %>
                                            <p>
                                                <%= message %>
                                            </p>
                                            <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('../partials/footer') -%>
                <%- include('../partials/bottom-a') -%>
                    <script src="../../js/user.register.js"></script>
                    <%- include('../partials/bottom-b') -%>