<%- include('../partials/top-a') -%>
<link rel="stylesheet" href="../../css/base/header.css">
<link rel="stylesheet" href="../../css/base/footer.css">
<link rel="stylesheet" href="../../css/home.css">
<%- include('../partials/top-b') -%>
<%- include('../partials/header') -%>

<main>
  <section class="search-content">
    <div class="container">
      <div class="row">
        <h1 class="col offset-s2 s8">Find your table for any occasion</h1>
      </div>
      <div class="row">
        <form class="search-form col offset-s2 s8" action="/" method="GET">
          <div class="content row" style="margin-bottom: 0;">
            
            <input class="col s9" type="text" id="search" name="q" value="<%= searchQuery %>" placeholder="Location, Restaurant, or Cuisine">
            <!-- <input class="col s12 m3 l3" type="date" id="date"> --> 
            <a class="btn waves-effect waves-light" type="submit">Search</a>
          </div>
        </form>
      </div>
    </div>
  </section>

  <section class="popular-mer">
    <div class="container">
      <h2>Merchants</h2>
      <div>
        <div class="row">
          <% top_six_mer.forEach(p=>{ %>
          <div class="col s12 m4">
            <div class="card">
              <div class="card-image waves-effect waves-block waves-light">
                <a href="/merchant/<%= p._id %>">
                  <img src='<%= p.backgroundImg%>'>
                </a>
              </div>
              <div class="card-content">
                <span class="card-title"><strong>
                    <%= p.name %>
                  </strong></span>
                <p>
                  <%= (p.description && p.description.split(' ').length > 7) ? p.description.split(' ').slice(0, 7).join(' ') + ' ...' : (p.description || 'No description available') %>
                </p>
                <div>
                  <div class="stars">
                    <% for (let i=0; i < p.star; i++) { %>
                    <% if (i+1> p.star ) { %>
                    <% if (p.star % 1 !==0) { %>
                    <i class="fas fa-star-half-alt"></i>
                    <% }%>
                    <% }else{ %>
                    <i class="fas fa-star"></i>
                    <% } %>
                    <% } %>
                  </div>
                  <span>(<%= p.reviews%> reviews)</span>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </section>

  <section class="popular-mer">
    <div class="container">
      <h2>Popular Merchants</h2>
      <div>
        <div class="row">
          <% popular_mer.forEach(p=>{ %>
          <div class="col s12 m4">
            <div class="card">
              <div class="card-image waves-effect waves-block waves-light">
                <a href="/merchant/<%= p.merchantId %>">
                  <img src='<%= p.backgroundImg%>'>
                </a>
              </div>
              <div class="card-content">
                <span class="card-title"><strong>
                    <%= p.name %>
                  </strong></span>
                <p>
                  <%= p.description%>
                </p>
                <div>
                  <div class="stars">
                    <% for (let i=0; i < p.star; i++) { %>
                    <% if (i+1> p.star ) { %>
                    <% if (p.star % 1 !==0) { %>
                    <i class="fas fa-star-half-alt"></i>
                    <% }%>
                    <% }else{ %>
                    <i class="fas fa-star"></i>
                    <% } %>
                    <% } %>
                  </div>
                  <span>(<%= p.reviews%> reviews)</span>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </section>

  <section class="featured-col">
    <div class="container">
      <h2>Featured Collections</h2>
      <div class="row">

        <% featured_col.forEach(c => { %>
        <div class="col s12 m3">
          <div class="card">
            <div class="card-image">
              <img src='<%= c.backgroundImg%>'>
            </div>
            <div class="title">
              <h3><%= c.type  %></h3>
              <p><%= c.description %></p>
            </div>
          </div>
        </div>
        <% }); %>

      </div>
    </div>
  </section>

  <%- include('../partials/footer') -%>
</main>
<%- include('../partials/bottom-a') -%>

<script src="../../js/home.js"></script>
<%- include('../partials/bottom-b') -%>