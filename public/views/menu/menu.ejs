<%- include('../partials/top-a') -%>
<link rel="stylesheet" href="../../css/base/header-b.css">

<link rel="stylesheet" href="../../css/menu.css">
<%- include('../partials/top-b') -%>
<%- include('../partials/header-b') -%>

<main class="container">
  <div class="fix-top  row">
    <div class="col s12">
      <ul class="tabs">
        <% menu.keys().forEach(element => { %>
        <% let originalKey = element; %>
        <% key = originalKey.toString().replace(/\s+/gi,""); %>
        <li class="tab col s3"><a href="#<%= key%>"><%= originalKey %></a></li>
        <% }) %>
      </ul>
    </div>
    <% menu.entries().forEach(entry => { %>
      <% let originalKey = entry[0]; %>
      <% key = originalKey.toString().replace(/\s+/gi,""); %>
      <div id="<%= key %>" class="col s12">
        <div class="row">
          <% entry[1].forEach(card => { %>
          <div class="col s12 m6 l4">
            <div class="card">
              <div class="card-image">
                <img src="<%= card.img %>">
              </div>
              <div class="card-content">
                <span class="card-title">
                  <div class="row">
                    <div class="col s8 cardName"><%= card.name %></div>
                    <div class="col s4">$<%= card.price %></div>
                  </div>
                </span>
                <p class="cardDesc"><%= card.desc %></p>
                <div class="stars">
                  <% for (let i=0; i < card.star; i++) { %>
                  <% if (i+1> card.star ) { %>
                  <% if (card.star % 1 !==0) { %>
                  <i class="fas fa-star-half-alt"></i>
                  <% }%>
                  <% }else{ %>
                  <i class="fas fa-star"></i>
                  <% } %>
                  <% } %>
                  <span>(<%= card.reviews%> reviews)</span>
                </div>
              </div>
              <div class="card-action">
                <div class="flex-between">
                  <div class="left">
                    <i class="fas fa-minus margin-right-10" onclick="ModifyCount(-1,this, '<%=card._id %>')"></i>
                    <span class="count margin-right-10">0</span>
                    <i class="fas fa-plus margin-right-10" onclick="ModifyCount(1,this,'<%=card._id %>')"></i>
                  </div>
                  <div class="right">
                    <a class="waves-effect waves-light btn" onclick="addToOrder('<%= JSON.stringify(card) %>')">Add to Order</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%    }); %>
        </div>
      </div>
    <% }); %>
  </div>
  
</main>
<%- include('../partials/bottom-a') -%>

<script src="../../js/menu.js"></script>
<%- include('../partials/bottom-b') -%>