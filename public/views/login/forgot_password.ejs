<%- include('../partials/top-a') -%>
    <link rel="stylesheet" href="../../css/base/header.css">
    <link rel="stylesheet" href="../../css/base/footer.css">
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        body {
            background: #fff;
        }

        .input-field input[type=date]:focus+label,
        .input-field input[type=text]:focus+label,
        .input-field input[type=email]:focus+label,
        .input-field input[type=password]:focus+label {
            color: #e91e63;
        }

        .input-field input[type=date]:focus,
        .input-field input[type=text]:focus,
        .input-field input[type=email]:focus,
        .input-field input[type=password]:focus {
            border-bottom: 2px solid #e91e63;
            box-shadow: none;
        }
    </style>
    <%- include('../partials/top-b') -%>
        <%- include('../partials/header') -%>

            <div class="section"></div>
            <main>
                <center>
                    <div class="section"></div>

                    <h5 class="indigo-text">PLEASE ENTER YOUR EMAIL</h5>
                    <div class="section"></div>

                    <div class="container">
                        <div class="z-depth-1 grey lighten-4 row"
                            style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

                            <form id="forgotPasswordForm">
                                <div class='row'>
                                    <div class='col s12'>
                                    </div>
                                </div>

                                <div class='row'>
                                    <div class='input-field col s12'>
                                        <i class="material-icons prefix">email</i>
                                        <input id="email" type="email" name="email" required>
                                        <label for="username">EMAIL</label>
                                    </div>
                                </div>

                                <br />
                                <center>
                                    <div class='row'>
                                        <button class='col s12 btn btn-large waves-effect indigo' type="submit">SEND RESET LINK
                                        </button>
                                    </div>
                                </center>
                            </form>
                        </div>
                    </div>

                </center>

                <div class="section"></div>
                <div class="section"></div>

                <script src="../../js/forgot_password.js"></script>
                <%- include('../partials/footer') -%>
            </main>
            <%- include('../partials/bottom-a') -%>
                <%- include('../partials/bottom-b') -%>